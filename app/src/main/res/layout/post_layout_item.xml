<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12pt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_profile_image_post"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/ic_user" />

            <TextView
                android:id="@+id/user_name_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30pt"
                android:layout_weight="1"
                android:fontFamily="@font/comments"
                android:text="user name"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/post_image_home"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginTop="10pt"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/postactivity" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2pt"
            android:layout_marginBottom="2pt">

            <ImageView
                android:id="@+id/post_image_like_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4pt"
                app:srcCompat="@drawable/ic_hart_border_24" />

            <ImageView
                android:id="@+id/post_image_comment_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15pt"
                android:layout_marginTop="5pt"
                android:layout_marginEnd="3pt"
                android:layout_marginBottom="3pt"
                android:layout_toEndOf="@+id/post_image_like_btn"
                android:src="@drawable/ic_comment_border_24" />

            <ImageView
                android:id="@+id/post_image_save_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4pt"
                android:layout_marginRight="8pt"
                android:src="@drawable/ic_save_border_24" />
        </RelativeLayout>

        <TextView
            android:id="@+id/likes_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8pt"
            android:layout_marginBottom="2pt"
            android:fontFamily="@font/comments"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/publisher_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8pt"
            android:layout_marginBottom="2pt"
            android:fontFamily="@font/comments"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deccriotions_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8pt"
            android:layout_marginBottom="2pt"
            android:fontFamily="@font/comments"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/comments_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8pt"
            android:layout_marginBottom="2pt"
            android:fontFamily="@font/comments"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>