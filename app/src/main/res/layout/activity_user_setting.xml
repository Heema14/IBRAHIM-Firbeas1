<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.UserSettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/setting_user_toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/texts"
        android:layout_height="80dp"

        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ok_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="40pt"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_ok_24" />

            <ImageView
                android:id="@+id/cancel_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_cancel_24" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/changImage_setting"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="5pt"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#00796B"
        android:layout_marginBottom="8pt"
        android:fontFamily="@font/ibrahim"
        android:text="Chang Image" />

    <EditText
        android:id="@+id/changFullname_setting"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:ems="10"
        android:background="@drawable/texts"
        android:textColor="#141515"
        android:textColorHint="#141515"
        android:layout_gravity="center"
        android:layout_marginBottom="7pt"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/changUsername_setting"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:ems="10"
        android:layout_gravity="center"
        android:background="@drawable/texts"
        android:textColor="#141515"
        android:textColorHint="#141515"
        android:layout_marginBottom="7pt"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="User Name" />

    <EditText
        android:id="@+id/changBio_setting"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/texts"
        android:textColor="#141515"
        android:textColorHint="#141515"
        android:layout_marginBottom="20pt"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Bio" />

    <Button
        android:id="@+id/logout_setting"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginBottom="10pt"
        android:text="Logout"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:background="@drawable/bu"/>

    <Button
        android:id="@+id/deleteAccount_setting"
        android:layout_gravity="center"
        android:layout_marginBottom="7pt"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/bu"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:text="Delete account" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_margin="8pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>